<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.weblhw.mapper.MemberMapper">
	
<!-- 이름은 id resultType = 결과 데이터 타입 -->
	<select id="getCurTime" resultType="string">
		select now()
	</select>
	<insert id="insertMember">
		insert into member(userid, password, name, email, userimg)
 values(#{userid}, sha1(md5(#{password})), #{name}, #{email}, #{userimg})
	</insert>
	<select id="getMember" resultType="com.lhw.domain.Member">
		select * from Member
	</select>
	<select id="getMemberByUserId" resultType="com.lhw.domain.Member">
		select * from Member where userid=#{userid}
	</select>
	
	
</mapper>