<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="securityMapper">
	<select id="getMemberDetails" resultType="domain.MemberDetailsDto">
		
            SELECT
                *
            FROM
                member
            WHERE
                userid=#{userid}
   
	</select>
	<insert id="memberRegister">
	insert into member(userid,password,name,email,phone,gender,birth) values(#{userid},#{password},#{name},#{email},#{phone},#{gender},#{birth})
	</insert>
	<update id="updateDisabled">UPDATE
                member
            SET
                enabled=0
            WHERE
                userid = #{userid}
</update>
	<select id="checkFailureCount" resultType="Integer">
		select failure_cnt from member where userid=#{userid}
	</select>
	<update id="updateFailureCount">
	update member set failure_cnt=failure_cnt+1 where userid=#{userid}
	</update>
	<update id="resetresetFailureCnt">
	update member set failure_cnt=0 where userid=#{userid}
	</update>
	<select id="getMemberVoForSession" resultType="domain.MemberVo">
		select*from member where userid=#{userid}
		</select>
</mapper>